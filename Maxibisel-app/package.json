{
  "name": "maxibisel",
  "version": "1.0.0",
  "description": "Sistema de Inventario Óptico",
  "main": "main.js",
  "author": "David Delgado",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.maxibisel.inventario",
    "productName": "Sistema de Inventario Óptico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules"
        ]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules"
      }
    ],
    "asar": false,
    "win": {
      "icon": "renderer/assets/LogoMMini.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "renderer/assets/LogoMMini.ico",
      "uninstallerIcon": "renderer/assets/LogoMMini.ico",
      "shortcutName": "Sistema de Inventario"
    }
  }
}